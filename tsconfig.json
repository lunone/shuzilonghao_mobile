{
    //   "extends": "@vue/tsconfig/tsconfig.json",
    "compilerOptions": {
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": ".",
        // "allowSyntheticDefaultImports": true, // 支持默认导入
        "resolveJsonModule": true, // 支持 JSON 模块导入
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "lib": [
            "esnext",
            "dom"
        ],
        "types": [
            "@dcloudio/types",
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
}
